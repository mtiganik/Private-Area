@model Domain.Company

@{
    ViewData["Title"] = "Create";
}

<h2>@Resources.WebApp.Areas.Users.Companies.Create.CreateNew</h2>

<h4>@Resources.WebApp.Areas.Users.Companies.Create.Company</h4>
<hr />
<div class="row">
    <div class="col-md-4">
     
        <form asp-action="Create" asp-route-fromProject="@ViewBag.fromProject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CompanyName" class="control-label"></label>
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyRegistrationName" class="control-label"></label>
                <input asp-for="CompanyRegistrationName" class="form-control" />
                <span asp-validation-for="CompanyRegistrationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyWebsite" class="control-label"></label>
                <input asp-for="CompanyWebsite" class="form-control" />
                <span asp-validation-for="CompanyWebsite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyType" class="control-label"></label>
                <select asp-for="CompanyTypeId" class="form-control" asp-items="ViewBag.CompanyTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CompanyFieldOfActivity" class="control-label"></label>
                <select asp-for="CompanyFieldOfActivityId" class="form-control" asp-items="ViewBag.CompanyFieldOfActivityId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="@Resources.WebApp.Areas.Users.Companies.Create.CreateNew" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (@ViewBag.fromProject == null)
    {
    <a asp-action="Index">@Resources.WebApp.Areas.Users.Companies.Create.SeeAllCompanies</a>
    }
    else
    {
    <a asp-action="Details" asp-controller="Projects" asp-route-id="@ViewBag.fromProject">@Resources.WebApp.Areas.Users.Companies.Create.BackToProject</a>

    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
