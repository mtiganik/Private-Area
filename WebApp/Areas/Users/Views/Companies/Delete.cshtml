@model Domain.Company

@{
    ViewData["Title"] = "Delete";
}

<h2>@Resources.Shared.Delete</h2>

<h3>@Resources.WebApp.Areas.Users.Companies.Delete.AreYouSure</h3>
<div>
    <h4>@Html.DisplayFor(model => model.CompanyName)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CompanyName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CompanyRegistrationName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CompanyRegistrationName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CompanyWebsite)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CompanyWebsite)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CompanyFieldOfActivity)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CompanyFieldOfActivity.CompanyFieldOfActivityId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CompanyType)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CompanyType.CompanyTypeId)
