@model WebApp.Areas.Users.Models.CompaniesCreateEditViewModel

<div class="form-group">
    <label asp-for="Company.CompanyName" class="control-label"></label>
    <input asp-for="Company.CompanyName" class="form-control" />
    <span asp-validation-for="Company.CompanyName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Company.CompanyRegistrationName" class="control-label"></label>
    <input asp-for="Company.CompanyRegistrationName" class="form-control" />
    <span asp-validation-for="Company.CompanyRegistrationName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Company.CompanyWebsite" class="control-label"></label>
    <input asp-for="Company.CompanyWebsite" class="form-control" />
    <span asp-validation-for="Company.CompanyWebsite" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Company.CompanyType" class="control-label"></label>
    <select asp-for="Company.CompanyTypeId" class="form-control" asp-items="Model.CompanyTypesSelectList">
        <option selected="selected" value="">Please Select</option>
    </select>
</div>
<div class="form-group">
    <label asp-for="Company.CompanyFieldOfActivity" class="control-label"></label>
    <select asp-for="Company.CompanyFieldOfActivityId" class="form-control" asp-items="Model.CompanyFieldOfActivitesSelectList">
        <option selected="selected" value="">Please Select</option>
    </select>
</div>
