@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Index";
}

<h1>@ViewBag.ResultMessage</h1>

<h2>Roles Listing </h2>

@Html.ActionLink("Create New Role", "Create") | @Html.ActionLink("Manage User Role", "ManageUserRoles")
<hr/>
<div>
    @foreach (var role in Model)
{
    <p><strong>@role.Name | </strong> 
    <span onclick="return confirm('Are you sure to delete?')"><a asp-action="Delete" asp-route-RoleName="@role.Name" class="delLink" style="color:red;">Delete</a></span> | 
    </p>
}
</div>