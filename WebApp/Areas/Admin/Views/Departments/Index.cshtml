@model IEnumerable<Domain.Department>

@{
    ViewData["Title"] = "Index";
}

<h2>@Resources.Common.Index</h2>

<p>
    <a asp-action="Create">@Resources.Common.CreateNew</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DepartmentName)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.Raw(item.DepartmentName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DepartmentId">@Resources.Common.Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DepartmentId">@Resources.Common.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DepartmentId">@Resources.Common.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
