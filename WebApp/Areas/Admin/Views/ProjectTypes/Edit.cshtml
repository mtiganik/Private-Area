@model Domain.ProjectType

@{
    ViewData["Title"] = "Edit";
}

<h2>@Resources.Common.Edit</h2>

<h4>ProjectType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectTypeId" />
            <div class="form-group">
                <label asp-for="ProjectTypeName" class="control-label"></label>
                <input asp-for="ProjectTypeName" class="form-control" />
                <span asp-validation-for="ProjectTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectTypeNameEst" class="control-label"></label>
                <input asp-for="ProjectTypeNameEst" class="form-control" />
                <span asp-validation-for="ProjectTypeNameEst" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectTypeComments" class="control-label"></label>
                <input asp-for="ProjectTypeComments" class="form-control" />
                <span asp-validation-for="ProjectTypeComments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectTypeCommentsEst" class="control-label"></label>
                <input asp-for="ProjectTypeCommentsEst" class="form-control" />
                <span asp-validation-for="ProjectTypeCommentsEst" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Resources.Common.Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Common.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
